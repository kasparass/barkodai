@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model string

<div class="text-center">
    <h1 class="display-4">Welcome to the home of<br />shopping<br />and<br />F-U-N!</h1>
</div>
<div>
    <label>Change Test User:</label>
    @foreach (int id in Enumerable.Range(1, 5))
    {
        <a asp-controller="Users" asp-action="ChangeUser" asp-route-id="@id" class="btn btn-info">@id</a>
    }

</div>
@if (Model != null)
{
    <div class="alert alert-dismissible alert-info notification-custom">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @Model
    </div>
}